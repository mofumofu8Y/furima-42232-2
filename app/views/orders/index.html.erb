<%= render "shared/second-header" %>

<div class='transaction-contents'>
  <div class='transaction-main'>
    <h1 class='transaction-title-text'>
      購入内容の確認
    </h1>

    <%# 購入内容の表示 %>
    <div class='buy-item-info'>
      <%= image_tag "item-sample.png", class: 'buy-item-img' %>
      <div class='buy-item-right-content'>
        <h2 class='buy-item-text'>
          <%= @item.name %> <!-- 商品名 -->
        </h2>
        <div class='buy-item-price'>
          <p class='item-price-text'>¥<%= @item.price %></p>
          <p class='item-price-sub-text'><%= '配送料負担' %></p>
        </div>
      </div>
    </div>
    <%# /購入内容の表示 %>

    <%# 支払額の表示 %>
    <div class='item-payment'>
      <h1 class='item-payment-title'>
        支払金額
      </h1>
      <p class='item-payment-price'>
        ¥<%= @item.price %> <!-- 販売価格 -->
      </p>
    </div>
    <%# /支払額の表示 %>

    <!-- ここから購入フォームの挿入 -->
    <%= form_for [@item, @order] do |f| %>
      <div class="form-group">
        <%= f.label :address, "配送先住所" %>
        <%= f.text_area :address, rows: 3 %>
      </div>

      <div class="form-group">
        <%= f.label :payment_method, "支払い方法" %>
        <%= f.select :payment_method, options_for_select(["クレジットカード", "銀行振込", "代引き"]) %>
      </div>

      <div class="form-group">
        <%= f.submit "購入する", class: "btn btn-primary" %>
      </div>
    <% end %>
    <!-- /購入フォーム -->

    <%= link_to 'キャンセル', item_path(@item), class: 'btn btn-secondary' %>
  </div>
</div>

<%= render "shared/second-footer" %>